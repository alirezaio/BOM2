<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title, placeholder: "Title" %>
  <%= f.input :url, as: :url, label: false, placeholder: "URL" %>
  
  <%= f.input :content, as: :text, label: false, placeholder: "Description" %>
  <div>
    Leave url blank to submit a question for discussion. If there is no url, the text (if any) will appear at the top
    of the thread.
  </div>

  <%= f.submit 'Submit', type: 'submit', class: 'btn btn-default' %>
<% end %>
